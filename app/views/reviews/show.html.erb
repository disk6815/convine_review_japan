<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-white">レビュー詳細</h1>
            <p class="text-blue-100 mt-2"><%= @review.product_name %></p>
          </div>
          <%= link_to reviews_path, class: "text-blue-100 hover:text-white transition-colors" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Content -->
      <div class="p-6">
        <!-- Image -->
        <% if @review.image.attached? %>
          <div class="mb-6">
            <%= image_tag @review.image, class: "w-full h-64 object-cover rounded-lg" %>
          </div>
        <% end %>

        <!-- Store and Product Info -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <%= @review.convenience_store_name %>
            </span>
            <div class="flex items-center">
              <div class="flex items-center">
                <% 5.times do |i| %>
                  <% if i < @review.rating.to_i %>
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% elsif i == @review.rating.to_i && @review.rating % 1 != 0 %>
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% end %>
                <% end %>
              </div>
              <span class="ml-2 text-lg font-semibold text-gray-700"><%= @review.rating %></span>
            </div>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">
            <%= @review.product_name %>
          </h2>
        </div>

        <!-- Review Body -->
        <% if @review.body.present? %>
          <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">レビュー</h3>
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-gray-700 leading-relaxed">
                <%= @review.body %>
              </p>
            </div>
          </div>
        <% end %>

        <!-- Tags -->
        <% if @review.categories.any? || @review.tastes.any? || @review.regions.any? %>
          <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">タグ</h3>
            <div class="flex flex-wrap gap-2">
              <% @review.categories.each do |category| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <%= category.name %>
                </span>
              <% end %>
              <% @review.tastes.each do |taste| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                  <%= taste.name %>
                </span>
              <% end %>
              <% @review.regions.each do |region| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                  <%= region.name %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Author Info -->
        <div class="border-t border-gray-200 pt-6">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
                <span class="text-white text-lg font-medium">
                  <%= @review.user.name&.first&.upcase || "U" %>
                </span>
              </div>
              <div class="ml-4">
                <p class="text-lg font-medium text-gray-900">
                  <%= @review.user.name %>
                </p>
                <p class="text-sm text-gray-500">
                  <%= @review.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                </p>
              </div>
            </div>
            <% if user_signed_in? && current_user == @review.user %>
              <div class="flex space-x-2">
                <%= link_to edit_review_path(@review), 
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  編集
                <% end %>
                <%= link_to review_path(@review), 
                    method: :delete, 
                    data: { confirm: "このレビューを削除しますか？" },
                    class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  削除
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
