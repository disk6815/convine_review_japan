<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-white">レビュー投稿</h1>
            <p class="text-blue-100 mt-2">コンビニ商品のレビューを投稿しましょう</p>
          </div>
          <%= link_to reviews_path, class: "text-blue-100 hover:text-white transition-colors" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Form -->
      <div class="p-6">
        <%= form_with model: @review, local: true, class: "space-y-6" do |form| %>
          <% if @review.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    エラーが<%= @review.errors.count %>件あります
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @review.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- コンビニ名（選択式） -->
          <div>
            <label for="review_convenience_store_name" class="block text-sm font-medium text-gray-700 mb-2">
              コンビニ名 <span class="text-red-500">*</span>
            </label>
            <%= form.select :convenience_store_name, options_from_collection_for_select(@convenience_stores, :name, :name, @review.convenience_store_name),
                { prompt: '選択してください' },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
          </div>

          <!-- 商品名 -->
          <div>
            <label for="review_product_name" class="block text-sm font-medium text-gray-700 mb-2">
              商品名 <span class="text-red-500">*</span>
            </label>
            <%= form.text_field :product_name, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
                placeholder: "例: おにぎり 鮭" %>
          </div>

          <!-- 総合評価 -->
          <div>
            <label for="review_rating" class="block text-sm font-medium text-gray-700 mb-2">
              総合評価 <span class="text-red-500">*</span>
            </label>
            <div class="flex items-center space-x-4">
              <%= form.range_field :rating, 
                  min: 0, max: 5, step: 0.5,
                  class: "flex-1 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer slider",
                  value: @review.rating || 0,
                  id: "review_rating_slider" %>
              <span class="text-lg font-semibold text-gray-700 min-w-[3rem]">
                <span id="rating-display"><%= @review.rating || 0 %></span>
              </span>
            </div>
            <div class="flex justify-between text-xs text-gray-500 mt-1">
              <span>0</span>
              <span>5</span>
            </div>
          </div>

          <!-- カテゴリ選択 -->
          <div>
            <label for="review_category_ids" class="block text-sm font-medium text-gray-700 mb-2">
              カテゴリ
            </label>
            <%= form.select :category_ids, 
                options_from_collection_for_select(Category.all, :id, :name), 
                { prompt: 'カテゴリを選択してください' }, 
                { multiple: true, class: "select2" } %>
          </div>

          <!-- レビュー本文 -->
          <div>
            <label for="review_body" class="block text-sm font-medium text-gray-700 mb-2">
              レビュー本文
            </label>
            <%= form.text_area :body, rows: 4,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
                placeholder: "商品の感想を書いてください..." %>
          </div>

          <!-- 画像アップロード -->
          <div>
            <label for="review_image" class="block text-sm font-medium text-gray-700 mb-2">
              商品画像
            </label>
            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-gray-400 transition-colors">
              <div class="space-y-1 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                  <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <div class="flex text-sm text-gray-600">
                  <label for="review_image" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                    <span>画像をアップロード</span>
                    <%= form.file_field :image, 
                        accept: "image/*",
                        class: "sr-only" %>
                  </label>
                  <p class="pl-1">またはドラッグ&ドロップ</p>
                </div>
                <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
              </div>
            </div>
          </div>

          <!-- 送信ボタン -->
          <div class="flex justify-end space-x-4 pt-6">
            <%= link_to "キャンセル", reviews_path, 
                class: "px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" %>
            <%= form.submit "投稿する", 
                class: "px-8 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-lg hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all transform hover:scale-105" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
console.log('Script tag loaded');

document.addEventListener('DOMContentLoaded', function() {
  console.log('DOMContentLoaded event fired');
  
  const ratingSlider = document.getElementById('review_rating_slider');
  const ratingDisplay = document.getElementById('rating-display');
  if (ratingSlider && ratingDisplay) {
    // 初期値反映
    ratingDisplay.textContent = ratingSlider.value;
    ratingSlider.addEventListener('input', function() {
      ratingDisplay.textContent = this.value;
    });
  }
  
  // Select2初期化
  console.log('Inline script: DOMContentLoaded fired');
  console.log('jQuery available:', typeof $ !== 'undefined');
  console.log('Select2 available:', typeof $ !== 'undefined' && $.fn && $.fn.select2);
  
  // jQueryが利用可能になるまで待機
  function waitForJQuery() {
    if (typeof $ !== 'undefined' && $.fn && $.fn.select2) {
      console.log('jQuery is available in inline script');
      try {
        $('.select2').select2({
          placeholder: 'カテゴリを選択してください',
          allowClear: true,
          width: '100%',
          multiple: true
        });
        console.log('Select2 initialized from inline script');
      } catch (e) {
        console.error('Select2 initialization error:', e);
      }
    } else {
      console.log('jQuery is not available yet, retrying...');
      setTimeout(waitForJQuery, 100);
    }
  }
  
  // 即座に実行
  waitForJQuery();
  
  // バックアップとして少し遅れて実行
  setTimeout(waitForJQuery, 1000);
});

// ページ読み込み完了時にも実行
window.addEventListener('load', function() {
  console.log('Window load event fired');
  
  if (typeof $ !== 'undefined' && $.fn && $.fn.select2) {
    console.log('Initializing select2 on window load');
    try {
      $('.select2').select2({
        placeholder: 'カテゴリを選択してください',
        allowClear: true,
        width: '100%',
        multiple: true
      });
      console.log('Select2 initialized on window load');
    } catch (e) {
      console.error('Select2 initialization error on window load:', e);
    }
  }
});

// Turboイベントに対応
document.addEventListener('turbo:load', function() {
  console.log('Turbo load event fired');
  
  if (typeof $ !== 'undefined' && $.fn && $.fn.select2) {
    console.log('Initializing select2 on turbo load');
    try {
      // 既存のselect2インスタンスを破棄
      $('.select2').select2('destroy');
    } catch (e) {
      console.log('Select2 destroy error:', e);
    }
    
    // 新しいselect2インスタンスを初期化
    $('.select2').select2({
      placeholder: 'カテゴリを選択してください',
      allowClear: true,
      width: '100%',
      multiple: true
    });
    console.log('Select2 initialized on turbo load');
  }
});

document.addEventListener('turbo:render', function() {
  console.log('Turbo render event fired');
  
  if (typeof $ !== 'undefined' && $.fn && $.fn.select2) {
    console.log('Initializing select2 on turbo render');
    try {
      // 既存のselect2インスタンスを破棄
      $('.select2').select2('destroy');
    } catch (e) {
      console.log('Select2 destroy error:', e);
    }
    
    // 新しいselect2インスタンスを初期化
    $('.select2').select2({
      placeholder: 'カテゴリを選択してください',
      allowClear: true,
      width: '100%',
      multiple: true
    });
    console.log('Select2 initialized on turbo render');
  }
});
</script>
