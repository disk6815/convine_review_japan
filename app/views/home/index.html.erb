<div class="min-h-screen font-sans glass-bg-glass">
  <!-- Header -->
  <header class="glass-header-glass2 border-b border-gray-200 shadow-lg sticky top-0 z-20">
    <div class="max-w-6xl mx-auto flex items-center justify-between px-4 md:px-6 py-2 md:py-2.5 relative">
      <!-- ロゴ（中央寄せ・スマホ時） -->
      <div class="flex-1 flex justify-center md:justify-start items-center">
        <%= image_tag 'log.svg', alt: 'サービスロゴ', class: 'w-28 h-auto md:w-36 lg:w-48' %>
      </div>
      <!-- ナビゲーション（中央揃え、テキストリンク） -->
      <nav class="hidden md:flex flex-1 justify-center space-x-8">
        <a href="#" class="nav-link-glass">Home</a>
        <a href="#" class="nav-link-glass">Reviews</a>
        <a href="#" class="nav-link-glass">List</a>
        <a href="#" class="nav-link-glass">Posts</a>
      </nav>
      <!-- 言語切替＋ログイン（右寄せ） -->
      <div class="hidden md:flex items-center space-x-2 flex-shrink-0 justify-end">
        <select onchange="window.location.search='?lang='+this.value" class="border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-200 bg-white shadow">
          <option value="ja" <%= params[:lang] == 'ja' ? 'selected' : '' %>>🇯🇵 Japanese</option>
          <option value="ko" <%= params[:lang] == 'ko' ? 'selected' : '' %>>🇰🇷 Korean</option>
        </select>
        <a href="#" class="glass-btn-glass px-5 py-2 rounded-lg font-bold text-blue-700 shadow hover:bg-blue-100/60 hover:text-blue-900 transition text-center border border-blue-200 backdrop-blur">Login</a>
        <a href="#" class="glass-btn-glass px-5 py-2 rounded-lg font-bold text-green-700 shadow hover:bg-green-100/60 hover:text-green-900 transition text-center border border-green-200 backdrop-blur">Sign up</a>
      </div>
      <!-- ハンバーガーメニュー（スマホのみ表示） -->
      <button id="mobile-menu-button" class="md:hidden absolute right-4 top-1/2 transform -translate-y-1/2 p-2 rounded-full bg-white/70 text-blue-600 shadow-lg hover:bg-blue-100 hover:text-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-200 transition" aria-label="メニューを開く">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
      <!-- モバイル用メニュー -->
      <div id="mobile-menu" class="fixed inset-0 z-30 flex flex-col md:hidden hidden">
        <div class="w-full shadow-2xl p-6 pt-4 flex flex-col space-y-4 animate-slide-down border border-white/30 bg-white/95 rounded-b-xl">
          <button id="mobile-menu-close" class="self-end mb-2 p-2 rounded-full bg-gray-200 text-gray-700 hover:bg-gray-300 focus:outline-none transition" aria-label="メニューを閉じる">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
          <nav class="flex flex-col space-y-2 text-center">
            <a href="#" class="mobile-nav-link-glass">Home</a>
            <a href="#" class="mobile-nav-link-glass">Reviews</a>
            <a href="#" class="mobile-nav-link-glass">List</a>
            <a href="#" class="mobile-nav-link-glass">Posts</a>
          </nav>
          <div class="flex flex-col space-y-2">
            <select onchange="window.location.search='?lang='+this.value" class="border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-200 bg-white shadow">
              <option value="ja" <%= params[:lang] == 'ja' ? 'selected' : '' %>>🇯🇵 Japanese</option>
              <option value="ko" <%= params[:lang] == 'ko' ? 'selected' : '' %>>🇰🇷 Korean</option>
            </select>
            <a href="#" class="block w-full px-4 py-2 rounded-lg glass-btn-glass font-bold text-blue-700 shadow hover:bg-blue-100/60 hover:text-blue-900 transition text-center border border-blue-200 backdrop-blur">Login</a>
            <a href="#" class="block w-full px-4 py-2 rounded-lg glass-btn-glass font-bold text-green-700 shadow hover:bg-green-100/60 hover:text-green-900 transition text-center border border-green-200 backdrop-blur">Sign up</a>
          </div>
        </div>
        <div class="flex-1 bg-black/40" onclick="document.getElementById('mobile-menu').classList.add('hidden')"></div>
      </div>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          var menuBtn = document.getElementById('mobile-menu-button');
          var menu = document.getElementById('mobile-menu');
          var closeBtn = document.getElementById('mobile-menu-close');
          if(menuBtn && menu) {
            menuBtn.addEventListener('click', function() {
              menu.classList.remove('hidden');
            });
          }
          if(closeBtn && menu) {
            closeBtn.addEventListener('click', function() {
              menu.classList.add('hidden');
            });
          }
        });
      </script>
      <style>
        .glass-bg-glass {
          min-height: 100vh;
          background: linear-gradient(135deg, #e0e7ff 0%, #f7f8fa 40%, #f0fdfa 100%);
          position: relative;
          z-index: 0;
        }
        .glass-bg-glass:before {
          content: "";
          position: fixed;
          inset: 0;
          z-index: -1;
          background: inherit;
          filter: blur(8px) brightness(1.08) saturate(1.2);
          opacity: 0.7;
        }
        .glass-header-glass2 {
          background: rgba(255,255,255,0.72);
          box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.10);
          border-bottom: 2px solid rgba(0,0,0,0.08);
          backdrop-filter: blur(22px) saturate(1.25);
          -webkit-backdrop-filter: blur(22px) saturate(1.25);
        }
        .nav-link-glass {
          font-weight: bold;
          color: #222;
          font-size: 1.08rem;
          padding: 0.25rem 0.5rem;
          border-radius: 0.5rem;
          transition: color 0.18s, background 0.18s, text-decoration 0.18s;
          text-decoration: none;
          position: relative;
        }
        .nav-link-glass:hover, .nav-link-glass:focus {
          color: #2563eb;
          background: rgba(224,239,255,0.18);
          text-decoration: underline;
          text-underline-offset: 4px;
        }
        .mobile-nav-link-glass {
          font-weight: bold;
          color: #222;
          font-size: 1.1rem;
          padding: 0.5rem 0.5rem;
          border-radius: 0.5rem;
          transition: color 0.18s, background 0.18s, text-decoration 0.18s;
          text-decoration: none;
          display: block;
        }
        .mobile-nav-link-glass:hover, .mobile-nav-link-glass:focus {
          color: #2563eb;
          background: rgba(224,239,255,0.18);
          text-decoration: underline;
          text-underline-offset: 4px;
        }
        .glass-btn-glass {
          background: rgba(255,255,255,0.32);
          border: 1.5px solid rgba(255,255,255,0.22);
          backdrop-filter: blur(14px) saturate(1.2);
          -webkit-backdrop-filter: blur(14px) saturate(1.2);
          box-shadow: 0 2px 12px 0 rgba(0,0,0,0.08);
          transition: background 0.18s, color 0.18s, border 0.18s;
        }
        .glass-btn-glass:hover, .glass-btn-glass:focus {
          background: rgba(224,239,255,0.32);
          color: #222;
          border-color: #a5b4fc;
        }
        .glass-card-glass {
          background: linear-gradient(120deg, rgba(255,255,255,0.45) 60%, rgba(224,239,255,0.25) 100%);
          box-shadow: 0 4px 32px 0 rgba(0,0,0,0.10);
          border-radius: 1.2rem;
          border: 1.5px solid rgba(255,255,255,0.22);
          backdrop-filter: blur(22px) saturate(1.3);
          -webkit-backdrop-filter: blur(22px) saturate(1.3);
          transition: box-shadow 0.2s, background 0.2s;
        }
        .glass-card-blue, .glass-card-yellow, .glass-card-green {
          background: linear-gradient(120deg, rgba(255,255,255,0.38) 60%, rgba(224,239,255,0.18) 100%);
          box-shadow: 0 4px 32px 0 rgba(0,0,0,0.10);
          border-radius: 1.2rem;
          border: 1.5px solid rgba(255,255,255,0.18);
          backdrop-filter: blur(18px) saturate(1.2);
          -webkit-backdrop-filter: blur(18px) saturate(1.2);
          transition: box-shadow 0.2s, background 0.2s;
        }
        .glass-login {
          background: linear-gradient(120deg, rgba(236,245,255,0.45) 60%, rgba(224,239,255,0.18) 100%);
          border: 1.5px solid rgba(180,210,255,0.18);
          backdrop-filter: blur(18px) saturate(1.2);
          -webkit-backdrop-filter: blur(18px) saturate(1.2);
          box-shadow: 0 4px 32px 0 rgba(0,0,0,0.10);
        }
        .glass-btn-glass {
          background: rgba(255,255,255,0.25);
          border: 1px solid rgba(255,255,255,0.18);
          backdrop-filter: blur(8px) saturate(1.2);
          -webkit-backdrop-filter: blur(8px) saturate(1.2);
          transition: background 0.2s;
        }
        .glass-link-glass {
          background: rgba(255,255,255,0.18);
          border: 1px solid rgba(255,255,255,0.10);
          backdrop-filter: blur(6px) saturate(1.1);
          -webkit-backdrop-filter: blur(6px) saturate(1.1);
          transition: background 0.2s, border 0.2s;
        }
        .glass-link-glass:hover {
          background: rgba(255,255,255,0.32);
          border-color: rgba(255,255,255,0.18);
        }
        .glass-header-link {
          color: #222 !important;
          text-shadow: 0 1px 0 #fff, 0 0px 8px #e0e7ff;
          letter-spacing: 0.01em;
        }
        .glass-header-link:hover {
          color: #2563eb !important;
          background: rgba(224,239,255,0.35) !important;
          text-shadow: 0 2px 8px #bcd0ff;
        }
        .glass-select-glass {
          background: rgba(255,255,255,0.30);
          border: 1px solid rgba(255,255,255,0.18);
          backdrop-filter: blur(8px) saturate(1.1);
          -webkit-backdrop-filter: blur(8px) saturate(1.1);
          transition: background 0.2s;
        }
        @keyframes slide-down {
          0% { transform: translateY(-100%); opacity: 0; }
          100% { transform: translateY(0); opacity: 1; }
        }
        .animate-slide-down {
          animation: slide-down 0.25s ease;
        }
        /* iPad mini・iPadサイズ対応のカスタムスタイル */
        @media (min-width: 768px) and (max-width: 1100px) {
          header .max-w-6xl {
            flex-wrap: nowrap !important;
          }
          header .max-w-6xl > div,
          header .max-w-6xl > nav {
            width: auto !important;
          }
          header nav.md\:flex {
            justify-content: center !important;
          }
          header .md\:flex-1 {
            flex: 1 1 0%;
          }
          header .md\:justify-end {
            justify-content: flex-end !important;
          }
          header .md\:justify-center {
            justify-content: center !important;
          }
          header .md\:flex-row {
            flex-direction: row !important;
          }
          header .md\:flex {
            display: flex !important;
          }
          header .md\:w-auto {
            width: auto !important;
          }
          header .md\:mt-0 {
            margin-top: 0 !important;
          }
          header .md\:my-3 {
            margin-top: 0.75rem !important;
            margin-bottom: 0.75rem !important;
          }
          /* nav高さ調整 */
          header nav.md\:flex {
            min-height: 0 !important;
            height: auto !important;
            align-items: center !important;
          }
        }
      </style>
    </header>

  <!-- Main -->
  <main class="max-w-6xl mx-auto px-2 sm:px-4 md:px-6 py-8 md:py-12">
    <!-- Top 3 Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-8 mb-8 md:mb-10">
      <!-- Reviews -->
      <div class="glass-card-blue rounded-xl shadow-lg p-4 md:p-6 flex flex-col items-center border-t-4 border-blue-200 hover:shadow-2xl transition glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-base md:text-lg font-bold mr-2 text-blue-700">Reviews</span>
          <span class="text-blue-300 text-xl">🔍</span>
        </div>
        <img src="<%= asset_path('review_index.png') %>" alt="Reviews" class="rounded-lg w-full h-24 sm:h-28 md:h-32 object-cover mb-2 glass-img-glass">
      </div>
      <!-- Post -->
      <div class="glass-card-yellow rounded-xl shadow-lg p-4 md:p-6 flex flex-col items-center border-t-4 border-yellow-200 hover:shadow-2xl transition glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-base md:text-lg font-bold mr-2 text-yellow-700">Post</span>
          <span class="text-yellow-300 text-xl">✏️</span>
        </div>
        <img src="<%= asset_path('post.jpg') %>" alt="Post" class="rounded-lg w-full h-24 sm:h-28 md:h-32 object-cover mb-2 glass-img-glass">
        <span class="text-xs md:text-sm text-gray-500 text-center">Share your review with everyone!</span>
      </div>
      <!-- List -->
      <div class="glass-card-green rounded-xl shadow-lg p-4 md:p-6 flex flex-col items-center border-t-4 border-green-200 hover:shadow-2xl transition glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-base md:text-lg font-bold mr-2 text-green-700">List</span>
          <span class="text-green-300 text-xl">✅</span>
        </div>
        <img src="<%= asset_path('list.jpg') %>" alt="List" class="rounded-lg w-full h-24 sm:h-28 md:h-32 object-cover mb-2 glass-img-glass">
        <span class="text-xs md:text-sm text-gray-500 text-center">Keep track of your favorite items</span>
      </div>
    </div>

    <!-- Bottom 2 Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mb-8 md:mb-10">
      <!-- Post History -->
      <div class="glass-card-yellow rounded-xl shadow-lg p-4 md:p-6 border-l-4 border-yellow-200 hover:shadow-2xl transition flex flex-col items-center md:items-start glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-sm md:text-base font-bold mr-2 text-yellow-700">Post History</span>
          <span class="text-yellow-300 text-xl">📄</span>
        </div>
        <img src="<%= asset_path('mypost.jpg') %>" alt="Post History" class="rounded-lg w-full h-20 md:h-24 object-cover mb-2 glass-img-glass">
      </div>
      <!-- Service Info -->
      <div class="glass-card-blue rounded-xl shadow-lg p-4 md:p-6 border-l-4 border-blue-200 hover:shadow-2xl transition flex flex-col items-center md:items-start glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-sm md:text-base font-bold mr-2 text-blue-700">Service Info</span>
          <span class="text-blue-300 text-xl">🌏</span>
        </div>
        <img src="<%= asset_path('service.jpg') %>" alt="Service Info" class="rounded-lg w-full h-20 md:h-24 object-cover mb-2 glass-img-glass">
        <span class="text-xs md:text-sm text-gray-500 text-center md:text-left">Discover all the features for your convenience store experience.</span>
      </div>
    </div>

    <!-- Login Prompt Section -->
    <div class="glass-login rounded-lg border border-blue-200 p-5 md:p-7 text-center flex flex-col items-center shadow-lg glass-card-glass">
      <span class="text-base md:text-lg font-semibold text-blue-800 mb-2">Login to unlock all features!</span>
      <span class="text-sm md:text-base text-blue-600 mb-4">You can only browse reviews before logging in.</span>
      <a href="#" class="px-5 md:px-8 py-2 rounded-lg bg-blue-600 text-white font-bold shadow hover:bg-blue-700 transition w-full sm:w-auto">Login</a>
    </div>
  </main>
  <style>
    .glass-img-glass {
      box-shadow: 0 2px 16px 0 rgba(255,255,255,0.18), 0 1.5px 8px 0 rgba(0,0,0,0.08);
      background: rgba(255,255,255,0.18);
      border-radius: 0.8rem;
      border: 1px solid rgba(255,255,255,0.13);
      backdrop-filter: blur(4px) saturate(1.1);
      -webkit-backdrop-filter: blur(4px) saturate(1.1);
    }
  </style>
</div>
