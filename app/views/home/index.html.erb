<div class="min-h-screen font-sans glass-bg-glass">
  <!-- Main -->
  <main class="max-w-6xl mx-auto px-2 sm:px-4 md:px-6 py-8 md:py-12">
    <!-- Top 3 Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-8 mb-8 md:mb-10">
      <!-- Reviews -->
      <div class="glass-card-blue rounded-xl shadow-lg p-4 md:p-6 flex flex-col items-center border-t-4 border-blue-200 hover:shadow-2xl transition glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-base md:text-lg font-bold mr-2 text-blue-700">Reviews</span>
          <span class="text-blue-300 text-xl">ğŸ”</span>
        </div>
        <img src="<%= asset_path('review_index.png') %>" alt="Reviews" class="rounded-lg w-full h-24 sm:h-28 md:h-32 object-cover mb-2 glass-img-glass">
      </div>
      <!-- Post -->
      <div class="glass-card-yellow rounded-xl shadow-lg p-4 md:p-6 flex flex-col items-center border-t-4 border-yellow-200 hover:shadow-2xl transition glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-base md:text-lg font-bold mr-2 text-yellow-700">Post</span>
          <span class="text-yellow-300 text-xl">âœï¸</span>
        </div>
        <img src="<%= asset_path('post.jpg') %>" alt="Post" class="rounded-lg w-full h-24 sm:h-28 md:h-32 object-cover mb-2 glass-img-glass">
        <span class="text-xs md:text-sm text-gray-500 text-center">Share your review with everyone!</span>
      </div>
      <!-- List -->
      <div class="glass-card-green rounded-xl shadow-lg p-4 md:p-6 flex flex-col items-center border-t-4 border-green-200 hover:shadow-2xl transition glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-base md:text-lg font-bold mr-2 text-green-700">List</span>
          <span class="text-green-300 text-xl">âœ…</span>
        </div>
        <img src="<%= asset_path('list.jpg') %>" alt="List" class="rounded-lg w-full h-24 sm:h-28 md:h-32 object-cover mb-2 glass-img-glass">
        <span class="text-xs md:text-sm text-gray-500 text-center">Keep track of your favorite items</span>
      </div>
    </div>

    <!-- Bottom 2 Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mb-8 md:mb-10">
      <!-- Post History -->
      <div class="glass-card-yellow rounded-xl shadow-lg p-4 md:p-6 border-l-4 border-yellow-200 hover:shadow-2xl transition flex flex-col items-center md:items-start glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-sm md:text-base font-bold mr-2 text-yellow-700">Post History</span>
          <span class="text-yellow-300 text-xl">ğŸ“„</span>
        </div>
        <img src="<%= asset_path('mypost.jpg') %>" alt="Post History" class="rounded-lg w-full h-20 md:h-24 object-cover mb-2 glass-img-glass">
      </div>
      <!-- Service Info -->
      <div class="glass-card-blue rounded-xl shadow-lg p-4 md:p-6 border-l-4 border-blue-200 hover:shadow-2xl transition flex flex-col items-center md:items-start glass-card-glass">
        <div class="flex items-center mb-2">
          <span class="text-sm md:text-base font-bold mr-2 text-blue-700">Service Info</span>
          <span class="text-blue-300 text-xl">ğŸŒ</span>
        </div>
        <img src="<%= asset_path('service.jpg') %>" alt="Service Info" class="rounded-lg w-full h-20 md:h-24 object-cover mb-2 glass-img-glass">
        <span class="text-xs md:text-sm text-gray-500 text-center md:text-left">Discover all the features for your convenience store experience.</span>
      </div>
    </div>

    <!-- Login Prompt Section -->
    <div class="glass-login rounded-lg border border-blue-200 p-5 md:p-7 text-center flex flex-col items-center shadow-lg glass-card-glass">
      <span class="text-base md:text-lg font-semibold text-blue-800 mb-2">Login to unlock all features!</span>
      <span class="text-sm md:text-base text-blue-600 mb-4">You can only browse reviews before logging in.</span>
      <a href="#" class="px-5 md:px-8 py-2 rounded-lg bg-blue-600 text-white font-bold shadow hover:bg-blue-700 transition w-full sm:w-auto">Login</a>
    </div>
  </main>
  <style>
    .glass-img-glass {
      box-shadow: 0 2px 16px 0 rgba(255,255,255,0.18), 0 1.5px 8px 0 rgba(0,0,0,0.08);
      background: rgba(255,255,255,0.18);
      border-radius: 0.8rem;
      border: 1px solid rgba(255,255,255,0.13);
      backdrop-filter: blur(4px) saturate(1.1);
      -webkit-backdrop-filter: blur(4px) saturate(1.1);
    }
  </style>
</div>
